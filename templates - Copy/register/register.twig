<div class="main container">
            <div class="col-md-6 col-md-offset-3 col-sm-12">
                    <form action="/register" method="POST">
                      <p class="color-text">{{error}}</p>
                        <div class="form-group">
                          <label for="email" class="color-text">Email address:</label>
                          <input type="email" class="form-control" name="email" id="email">
                        </div>
                        <div class="form-group">
                          <label for="pwd" class="color-text">Password:</label>
                          <input type="password" class="form-control" name="pwd" id="pwd">
                        </div>
                         <div class="form-group">
                          <label for="repwd" class="color-text">Re-enter Password:</label>
                          <input type="password" class="form-control" name="repwd" id="repwd">
                        </div>
                        <div class="form-group">
                        </div>
                        <button type="submit" id="submit_register" name="submit_register" class="btn btn-info">Submit</button>
                    </form>
            </div>
</div> 