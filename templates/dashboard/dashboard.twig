<div class="container">
    <div class="col-md-6 col-md-offset-3 col-sm-12">
                    <form id="forminput">
                        <div class="form-group">
                          <label for="name" class="color-text">name:</label>
                          <input type="text" class="form-control" name="name" id="name">
                        </div>
                        <div class="form-group">
                          <label for="comment" class="color-text">comment:</label>
                          <input type="text" class="form-control" name="comment" id="comment">
                        </div>
                        <button type="submit" id="submit_comment" name="submit_comment" class="btn btn-info">Submit</button>
                    </form>
            </div>
</div>

<script
  src="https://code.jquery.com/jquery-3.2.1.min.js"
  integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
  crossorigin="anonymous"></script>


<script>

$("#forminput").submit(function(e)
{

    var url = "dashboard";
    $.ajax({
        type: "POST",
        url: url,
        data: $("#forminput").serialize(),
        dataType: 'json', //what is returned
        success : function(data)
        {
            $("#table").append("<tr><td>" + data.name + "</td><td>" + data.comment + "</td></tr>");
        }

    });
    e.preventDefault();
});


</script>

<div class="container">
<table id="table">
    <tr>
        <td>name</td>
        <td>comment</td>
    </tr>
    {% for item in comments %}
        <tr>
            <td>{{ item.name }}</td>
            <td>{{ item.comment }}</td>
        </tr>
    {% endfor %}
</table>
</div>



